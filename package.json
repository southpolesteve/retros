{
  "name": "retros",
  "version": "1.0.0",
  "description": "Real-time retrospective app for teams",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:test": "rm -rf .wrangler/state/v3/d1 && pnpm run db:init && wrangler dev --port 8787",
    "deploy": "wrangler deploy",
    "db:init": "wrangler d1 migrations apply retros-db --local",
    "db:migrate": "wrangler d1 migrations apply retros-db --remote",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "typecheck": "tsgo --noEmit",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "check": "pnpm run typecheck && pnpm run lint"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@cloudflare/workers-types": "^4.20260107.1",
    "@playwright/test": "^1.57.0",
    "@typescript/native-preview": "7.0.0-dev.20260107.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.57.0"
  }
}
